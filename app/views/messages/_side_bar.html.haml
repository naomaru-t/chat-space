.side--bar
  .side--bar__user--name
    .side--bar__user--name__top--items
      %h3.side--bar__user--name__top--items__name
        = current_user.name
      %ul.side--bar__user--name__top--items__icons
        %li.side--bar__user--name__top--items__icons__btn
          = link_to new_group_path do
            = icon('far', 'edit')

        %li.side--bar__user--name__top--items__icons__btn
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side--bar__group--list
    - current_user.groups.each do |group|
      .side--bar__group--list--contents
        = link_to '#', class: "side--bar__group--list--contents" do
          .side--bar__group--list--contents__name
            = group.name
          .side--bar__group--list--contents__message
            メッセージはまだありません