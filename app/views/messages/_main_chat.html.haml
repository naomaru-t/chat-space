.chat--main
  .chat--main__group--info
    .chat--main__group--info__contents
      %ul.chat--main__group--info__contents__name
        %li.chat--main__group--info__contents__name__group 
          = @group.name
        %li.chat--main__group--info__contents__name__member 
          Member :
          - @group.users.each do |f|
            = f.name
      .chat--main__group--info__contents__btn
        = link_to edit_group_path(@group), class: "group__edit" do
          Edit
  .chat--main__message--list
    = render @messages
    
  .chat--main__message--form
    = form_with model: [@group, @message], html: {class: "chat--main__message--form__contents"}, local: true do |f|
      .chat--main__message--form__contents__inputbox
        = f.text_field :content, class: 'chat--main__message--form__contents__inputbox__text', placeholder: 'type a message'
        = f.label :image, class: 'chat--main__message--form__contents__inputbox--icon' do
          = icon('far', 'image')
          = f.file_field :image, class: 'chat--main__message--form__contents__inputbox--icon__hidden'
      = f.submit 'Send', class: 'chat--main__message--form__contents__btn'
